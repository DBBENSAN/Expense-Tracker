<div id="template">
   <aside class="menu">
      <p class="menu-label">Actions</p>
      <ul class="menu-list">
         <li><button id="add-transactions-button" class="button is-primary">Add Transactions</button></li>
         <li><button id="set-budget-button" class="button is-primary">Set Budget</button></li>
      </ul>
   </aside>

   <main class="section">
      <div class="columns">
         <div class="column">
            <p>Income: {{income}}</p>
         </div>
         <div class="column">
            <p>Expense: {{expense}}</p>
         </div>
         <div class="column">
            <p>Budget: {{budget}}</p>
         </div>
      </div>

      <div class="columns">
         <div class="column">
            <canvas id="chart"></canvas>
            {{! chart.js chart goes here }}
         </div>
      </div>

      <div class="columns">
         {{!-- {{> partial}} --}}
      </div>
   </main>
</div>

<div id="transactions-partial">
   <table class="table is-fullwidth">
      <thead>
         <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Amount</th>
         </tr>
      </thead>
      <tbody>
         {{#each transactions}}
         <tr>
            <td>{{date}}</td>
            <td>{{description}}</td>
         </tr>
         {{/each}}
      </tbody>
   </table>
</div>